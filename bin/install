#!/usr/bin/env python

import os
from pathlib import Path


def install_repm():
    os.system("pip install repm")


def setup_hidden_files():
    repm_dir = os.path.join(str(Path.home()), ".repm")
    os.mkdir(repm_dir)

    with open(os.path.join(repm_dir, "repm.json"), "w") as fin:
        fin.write("{}\n")


if __name__ == "__main__":
    install_repm()
    setup_hidden_files()
